{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/(.*\\.(?:js|css|ico|svg|png|jpg|jpeg|gif|json|webmanifest|woff2|woff|ttf))$",
      "dest": "/$1" 
    },
    {
      "src": "/(.*)",
      "dest": "/index.html"
    }
  ]
}